*
  margin 0
  padding 0
body
  background linear-gradient(90deg, #2E1B39 10%, #2B435F 30%, #2E1B39)
  font-size 14px
  font-family: 'Noto Sans', serif;
.shadowed
  border-radius 10px
  box-shadow 1px 1px 5px #bbb
.section
  padding 60px 10%
.section1
  color white
  text-align right
  span
    font-size 20px
    margin-left 20px
.section2
  background #EDE3D7
  h1
    margin 20px 0 20px 0
    font-size 40px
    font-weight bold
    letter-spacing 3px
  .col-3
    display grid
    grid-template-columns 1fr 1fr 1fr
    grid-gap 100px
  img
    width 100%
    border-radius 10px
    box-shadow 1px 1px 5px #bbb
  p
    font-size 18px
    line-height 28px
    span
      font-size 24px
      font-weight bolder
  .links
    display flex
    flex-direction column
    > a
      flex-grow 1
      border-radius 10px
      box-shadow 1px 1px 5px #bbb
      margin-bottom 25px
      display flex
      color white
      justify-content center
      align-items center
      font-weight bold
      font-size 2em
      cursor pointer
      text-decoration: none
      &:last-child
        margin-bottom 0
        color black
.section3
  h1
    color #EDE3D7
    margin 20px 0 20px 0
    font-size 40px
    font-weight bold
    letter-spacing 3px
    &:not(:first-child)
      margin-top 50px
  .grid
    display grid
    grid-template-columns 1fr 1fr
    grid-template-rows 150px 150px
    grid-gap 50px
    a
      text-decoration none !important
    > *
      display flex
      justify-content center
      align-items center
      font-weight bold
      color white
      font-size 3em
      text-shadow 1px 1px 3px gray
      position relative
      overflow hidden
      border-radius 10px
      .bg
        position absolute
        width 100%
        height 100%
        left 0
        top 0
        background-position center
        background-size cover
        opacity 0.5
        z-index -1
    > div:hover
    > a:hover
      .bg
        opacity 0.8
        transform scale(1.2)
        transition transform 1s
    .achievements
      grid-column 2
      grid-row 1 / span 2
  .grid2
    display grid
    grid-template-columns 1fr 1fr 1fr
    grid-auto-rows auto
    grid-gap 50px
    img
      width: 100%
      &:nth-child(5)
      &:nth-child(6)
        transform rotate(180deg)
  .grid3
    display grid
    grid-template-columns 1fr 1fr 1fr
    grid-auto-rows auto
    grid-gap 50px
    img
      width: 100%

